<%= link_to("<< Back to list", sections_path, :class => "back-link") %>

<div class="sections edit">
  <h2>Edit Section</h2>

  <%= form_for(@section) do |f| %>
    <table summary = "Section from fields">
      <tr>
        <th> Name </th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th> Position </th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th> Page Id </th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
      <tr>
        <th> Visible </th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
      <tr>
        <th> Content Type </th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>
      <tr>
        <th> Content </th>
        <td><%= f.text_field(:content) %></td>
      </tr>
    </table>

    <%= f.submit("Edit Section") %>
  <% end %>


</div>
