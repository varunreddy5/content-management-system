
<div class="sections index">
  <h2>Subjects</h2>
  <%= link_to("Add new Section", new_section_path, :class => "action now") %>
  <table class = "listing" summary = "Subject list">
    <tr class = "header">
      <th>#</th>
      <th>Section</th>
      <th>Page Id</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Content Type</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td> <%= section.position %> </td>
      <td> <%= section.name %> </td>
      <td> <%= section.page_id %> </td>
      <td> <%= section.visible ? 'Yes' : 'No' %> </td>
      <td> <%= section.pages.size %> </td>
      <td> <%= section.content_type %> </td>
      <td> <%= section.content %> </td>
      <td class = "action">
        <%= link_to("Show", section_path(section), :class => "action show") %>
        <%= link_to("Edit", edit_section_path(section), :class => "action edit") %>
        <%= link_to("Delete", delete_section_path(section), :class => "action delete") %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
