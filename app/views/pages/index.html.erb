
<div class="pages index">
  <h2>Pages</h2>
  <%= link_to("Add new Page", new_page_path, :class => "action now") %>
  <table class = "listing" summary = "Page list">
    <tr class = "header">
      <th>#</th>
      <th>Subject ID</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Sections</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td> <%= page.position %> </td>
      <td> <%= page.subject_id %> </td>
      <td> <%= page.name %> </td>
      <td> <%= page.permalink %> </td>
      <td> <%= page.visible ? 'Yes' : 'No' %> </td>
      <td> <%= page.sections.size %> </td>
      <td class = "action">
        <%= link_to("Show",page_path(page) , :class => "action show") %>
        <%= link_to("Edit", edit_page_path(page), :class => "action edit") %>
        <%= link_to("Delete", delete_page_path(page), :class => "action delete") %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
